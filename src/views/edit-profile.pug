extends base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="POST") 
        input(placeholder="name", type="text", name="name", value=loggedInUser.name required)
        input(placeholder="user name", type="text", name="username", value=loggedInUser.username  required)
        input(placeholder="email", type="email", name="email", value=loggedInUser.email   required)    
        input(placeholder="location", type="text", name="location", value=loggedInUser.location  required)
        input(type="submit" value="수정하기") 
        hr
    if !loggedInUser.socialOny
        a(href="change-password") Change Password 