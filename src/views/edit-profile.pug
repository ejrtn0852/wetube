extends base.pug

block content 
    if errorMessage
        span=errorMessage
    if avatarError
        span=avatarError
    div.avatar-box
        img.avatar-img(src="/" + loggedInUser.avatarUrl,width="100", height="100")
    div.avatar-form-box
        form.avatar-form(method="POST", enctype="multipart/form-data") 
            label(for="avatar") 프로필사진
            input(type="file" id="avatar" name="avatar", accept="image/*")
            label(for="location") 소개
            input(placeholder="location", type="text", name="location", value=loggedInUser.location  required)
            input(type="submit" value="수정하기") 
            if !loggedInUser.socialOny
                a(href="change-password") Change Password 