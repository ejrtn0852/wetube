extends ../base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")  
        input(placeholder="Old Password", type="password", name="oldPassword", required)
        input(placeholder="New password" type="password" name="newPassword" required)
        input(placeholder="New password Confirmation" type="password" name="confirmation" required)
        input(type="submit" value="Join now")