extends base.pug

block content 
    div#videoContainer(data-id=video._id)
        video(src="/" + video.fileUrl)
        div#videoControls 
            button#play Play 
            button#mute Mute
            span#time 00:00/00:00
            input(type="range", step="0.1",value="0.5" min="0", max="1")#volume
        div 
            span#currentTime 00:00
            span  /
            span#totalTime 00:00
        div 
            input(type="range", step="1", value=0, min="0")#timeline
        div 
            button#fullScreen Full  
    div
        strong  
            a(href=`/users/${video.owner._id}`) #{video.owner.name}
        p=video.description
        p=video.hashtags
        small=video.createdAt
        p=video.meta.views
    <br>
    if loggedInUser && (String(loggedInUser._id) === String(video.owner._id))
        a(href=`${video.id}/edit`) Edit Video &larr;
        <br>
        a(href=`${video.id}/delete`) Delete Video &larr;     

block scripts 
    script( defer  src="/static/js/videoPlayer.js") 